<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/message_icon"
            />
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/view_not_read"
            android:visibility="invisible"
            android:background="@drawable/dot_new_message"
            android:layout_alignRight="@id/message_icon"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message_tv_title"
                android:textSize="14sp"
                android:textColor="@color/color_app_text_yes"
                android:layout_width="200dp"
                android:singleLine="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/message_tv_time"
                android:textSize="13sp"
                android:textColor="@color/messageTime"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:paddingTop="5dp"
            android:id="@+id/message_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/hot_search_text"
            android:singleLine="true"
            />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>