<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_love_list"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/loading"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/iv_item_love_list_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv_item_love_list_review"
        android:layout_width="80dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="13sp"
        android:text="@string/no_comm"
        android:background="@color/color_app_text_yes"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        />

    <TextView
        android:id="@+id/tv_item_love_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_love_list"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_big_text"
        android:textSize="17sp"
        />

    <LinearLayout
        android:layout_below="@id/tv_item_love_list_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:gravity="center"
        android:layout_marginBottom="20dp"
       >

        <TextView
            android:id="@+id/tv_item_love_list_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_review"
            android:background="@drawable/shape_love_btn"
            android:textColor="@color/color_app_text_yes"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_item_love_list_get"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/get_openshop_plan"
            android:background="@drawable/shape_find_project_btn"
            android:textColor="@color/color_white"

            />

    </LinearLayout>

</RelativeLayout>