<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_home_interest_biglogo"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/iv_item_home_interest_smalllogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_home_interest_content1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_16"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_item_home_interest_content2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_small_text"
        android:textSize="@dimen/text_size_12"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"

        />

    <LinearLayout
        android:id="@+id/ll_item_guess_interest"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_home_interest_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color2"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_brand_color1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12sp"
            />

    </LinearLayout>

</LinearLayout>