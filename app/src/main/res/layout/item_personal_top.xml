<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/personal_iv_head_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:clickable="false" />

        <TextView
            android:id="@+id/personal_tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/personal_iv_head_icon"
            android:layout_alignTop="@id/personal_iv_head_icon"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/personal_iv_head_icon"
                    android:layout_alignBottom="@id/personal_iv_head_icon"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">
            <TextView
                android:textColor="#a4998e"
                android:text="个性签名: "
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/personal_tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:maxLength="25"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="#a4998e" />
                </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/color_gray" />

</LinearLayout>
