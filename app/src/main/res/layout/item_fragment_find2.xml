<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_item_brand_assess_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:maxLines="8"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_big_text"
        android:ellipsize="end"
        />

    <LinearLayout
        android:id="@+id/ll_item_fragment_find2"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_find2_iv1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/loading"
            />

        <ImageView
            android:id="@+id/iv_find2_iv2"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/loading"
            />

        <ImageView
            android:id="@+id/iv_find2_iv3"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/loading"
            />


    </LinearLayout>

    <LinearLayout
        android:gravity="right|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_read"/>

        <TextView
            android:id="@+id/tv_find2_look"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_small_text"
            android:text="0"
            android:textSize="@dimen/text_size_12"
            />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_unlike_detail"/>

        <TextView
            android:id="@+id/tv_find2_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_small_text"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="@dimen/text_size_12"
            />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comment_icon"/>
        <TextView
            android:id="@+id/tv_find2_comment"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_small_text"
            android:text="0"
            android:textSize="@dimen/text_size_12"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divi_line"
        android:layout_marginTop="10dp"
        />

</LinearLayout>