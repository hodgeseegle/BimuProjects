<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/item_app_title3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_brand_assess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assess"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_app_text_yes"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />

            <include
                android:id="@+id/view_brand1"
                layout="@layout/item_view_brand_bottom"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_brand_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fee"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_middle_text"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />

            <include
                android:id="@+id/view_brand2"
                layout="@layout/item_view_brand_bottom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_brand_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail"
                android:textColor="@color/color_middle_text"
                android:textSize="@dimen/text_size_12"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_weight="1"/>

            <include
                android:id="@+id/view_brand3"
                layout="@layout/item_view_brand_bottom"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_brand_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recommend"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_middle_text"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />

            <include
                android:id="@+id/view_brand4"
                layout="@layout/item_view_brand_bottom"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_brand_detail"
            android:divider="#ffffff"
            android:layout_above="@+id/ll_brand_detail_bottom"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@id/ll_brand_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/ll_brand_get_join_process"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dagou"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/join_process"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_small_text"
                    />

            </LinearLayout>

            <include layout="@layout/item_open_shop_btn"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_brand_add_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="17dp"
            android:layout_above="@+id/ll_brand_detail_bottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

    </RelativeLayout>

</LinearLayout>