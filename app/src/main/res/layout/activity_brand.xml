<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_app_bg">

        <ImageView
            android:id="@+id/iv_exit_brand"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_white"/>

        <TextView
            android:id="@+id/tv_brand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/brand_detail"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/iv_brand_love"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:id="@+id/iv_brand_share"
                android:layout_width="25dp"
                android:visibility="gone"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                />

        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/tv_brand_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/detail"
            android:textColor="@color/color_app_text_yes"
            android:textSize="@dimen/text_size_12"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_brand_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fee"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_middle_text"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_brand_assess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/assess"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_middle_text"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_brand_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/recommend"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_middle_text"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.can.bimuprojects.view.BrandParentListView
        android:id="@+id/lv_brand_detail"
        android:divider="#ffffff"
        android:layout_above="@+id/ll_brand_detail_bottom"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@id/ll_brand_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/ll_brand_get_join_process"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_brand_dagou"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_process"
                android:textSize="12sp"
                android:textColor="@color/color_small_text"
                />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_brand_get_openshop_process"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_app_text_yes"
                android:textColor="@color/color_white"
                android:text="@string/get_openshop_plan"
                android:textSize="18sp"
                android:gravity="center"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_brand_add_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="17dp"
            android:layout_above="@+id/ll_brand_detail_bottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

    </RelativeLayout>

</LinearLayout>