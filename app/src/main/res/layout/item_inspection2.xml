<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_item_inspection_title"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/ll_item_inspection_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_inspecial_img"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_inspection_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_middle_text"
        android:textSize="@dimen/text_size_14"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:maxLines="4"
        android:lineSpacingExtra="4dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_inspection_reducible_brands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="5dp"
            android:textColor="@color/color_middle_text"
            android:text="@string/reducible_brands"
            />

        <LinearLayout
            android:layout_toRightOf="@id/tv_item_inspection_reducible_brands"
            android:id="@+id/ll_item_inspection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_inspection_look"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_small_text"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_small_text"
                android:gravity="center_vertical"
                android:text="@string/read"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/tv_item_inspection_comment"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_small_text"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_small_text"
                android:gravity="center_vertical"
                android:text="@string/comment"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divi_line"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

</LinearLayout>