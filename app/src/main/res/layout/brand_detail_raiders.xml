<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@color/low_bg">

        <ImageView
            android:id="@+id/iv_brand_detail_raiders"
            android:layout_width="30dp"
            android:layout_height="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/assess"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/brand_text"
            />

    </LinearLayout>

    <com.can.bimuprojects.view.BrandChildListView
        android:layout_width="match_parent"
        android:divider="#ffffff"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:id="@+id/lv_brand_assess"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_brand_detail_raiders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:text="@string/look_all_radiers"
        android:background="@drawable/shape_look_all_raiders"
        android:textColor="@color/color_app_text_yes"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>