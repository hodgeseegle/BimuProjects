<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_login_or_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:paddingBottom="40dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_guide_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:background="@drawable/shape_login"
            android:textColor="@color/color_white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/btn_guide_register"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registe"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:background="@drawable/shape_register"
            android:textColor="@color/color_middle_text"
            android:textSize="16sp"/>

    </LinearLayout>


</RelativeLayout>