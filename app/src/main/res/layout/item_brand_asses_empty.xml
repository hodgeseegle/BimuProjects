<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_small_text"
        android:textSize="@dimen/text_size_14"
        android:gravity="center"
        android:padding="30dp"
        android:text="@string/no_raiders"/>

    <TextView
        android:id="@+id/tv_item_brand_assess_rob_sofa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:text="@string/rob_sofa"
        android:background="@drawable/shape_look_all_raiders"
        android:textColor="@color/color_app_text_yes"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>