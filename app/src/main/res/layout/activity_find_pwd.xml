<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
                android:fitsSystemWindows="true"
                android:background="@color/color_white"
             >

    <include layout="@layout/item_app_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/tv_title_find_pwd"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_big_text"
            android:textSize="22sp"/>

        <com.can.bimuprojects.view.ClearEditText
            android:layout_marginTop="50dp"
            android:id="@+id/find_pwd_et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_input_phone_num"
            android:theme="@style/Et_style"
            android:inputType="phone"
            android:padding="10dp"
            android:drawablePadding="2dp"
            android:background="@null"
            android:drawableBottom="@drawable/shape_et_line2"
            android:textSize="16sp"
            android:textColorHint="@color/hot_search_text"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/find_pwd_et_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hot_search_text"
                android:hint="验证码"
                android:drawablePadding="2dp"
                android:background="@null"
                android:drawableBottom="@drawable/shape_et_line2"
                android:theme="@style/Et_style"
                android:inputType="phone"
                android:textSize="16sp"
                android:maxLength="12"
                android:padding="10dp"
                android:layout_marginTop="5dp"
               />

            <Button
                android:id="@+id/find_pwd_btn_get_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:text="| 获取验证码"
                android:textSize="13sp"
                android:textColor="@color/color_small_text"/>

        </RelativeLayout>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/find_pwd_et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pwd"
            android:drawablePadding="2dp"
            android:background="@null"
            android:drawableBottom="@drawable/shape_et_line2"
            android:padding="10dp"
            android:imeOptions="actionDone"
            android:theme="@style/Et_style"
            android:textColorHint="@color/hot_search_text"
            android:textSize="16sp"
            android:inputType="textPassword"
            />

        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/find_pwd_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_login"
            android:text="密码找回"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>


</LinearLayout>
