<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/item_app_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.can.bimuprojects.view.RefreshListView
            android:id="@+id/lv_findproject_result"
            android:layout_width="match_parent"
            android:divider="#000000"
            android:dividerHeight="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_find_project_result"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            android:background="@color/color_white"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_find_project_result1"
            android:textSize="15sp"
            android:textColor="@color/color_big_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_find_project_result2"
                android:textSize="15sp"
                android:textColor="@color/color_big_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_find_project_result3"
                android:textSize="15sp"
                android:textColor="@color/color_big_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>