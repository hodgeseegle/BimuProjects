<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="150dp"
       >

    <ImageView
        android:id="@+id/iv_item_home_special"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_item_home_special_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_white"
            android:background="@color/low_transl"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_home_special"
        android:layout_width="270dp"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/color_big_text"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_home_special_has_brand"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reducible_brands"
            android:textColor="@color/color_small_text"
            android:textSize="@dimen/text_size_12"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:id="@+id/ll_home_special"
            />

    </LinearLayout>

</LinearLayout>