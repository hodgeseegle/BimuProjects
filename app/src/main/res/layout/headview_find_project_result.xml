        <TextView
            android:id="@+id/tv_item_find_project_result3"
            android:textSize="15sp"
            android:textColor="@color/color_big_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
