<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    tools:context="com.can.bimuprojects.activity.SettingActivity">


    <include layout="@layout/item_app_title"/>


    <RelativeLayout
        android:id="@+id/setting_rl_modify_head_icon"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_big_text"
            android:text="修改头像"/>

        <ImageView
            android:id="@+id/seting_iv_head_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divi_line"/>

    <RelativeLayout
        android:id="@+id/setting_rl_modify_nick_name"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_big_text"
            android:text="修改用户名"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divi_line"/>

    <RelativeLayout
        android:id="@+id/setting_rl_modify_signature"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_big_text"
            android:text="修改个性签名"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divi_line"/>

    <RelativeLayout
        android:id="@+id/setting_rl_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_big_text"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_14"
            android:text="修改密码"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/arrow_right"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_gray"/>


    <TextView
        android:id="@+id/setting_tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_big_text"
        android:text="清除缓存"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_gray"/>

    <TextView
        android:id="@+id/setting_tv_user_agreement"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/color_big_text"
        android:gravity="center"
        android:text="比目用户协议"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_gray"/>

    <TextView
        android:id="@+id/setting_tv_check_update"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone"
        android:textColor="@color/color_big_text"
        android:text="检查更新"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray"
        >

    <TextView
        android:id="@+id/setting_btn_exit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_14"
        android:text="@string/exit_current_uid"
        android:background="@color/color_white"
        android:textColor="@color/color_app_bg"/>

    </LinearLayout>


</LinearLayout>
