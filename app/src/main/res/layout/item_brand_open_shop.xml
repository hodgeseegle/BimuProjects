<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cb_brand_open_shop"
        android:src="@drawable/radio_button_on"
        android:layout_width="25dp"
        android:layout_marginLeft="5dp"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_brand_open_shop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_brand_open_shop_title"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_brand_open_shop_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow_right"
        android:layout_gravity="right|center"
        />

</LinearLayout>