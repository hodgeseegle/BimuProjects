<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cb_brand_open_shop"
        android:src="@drawable/radio_button_on"
        android:layout_width="35dp"
        android:padding="8dp"
        android:layout_height="35dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:id="@+id/iv_brand_open_shop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/ll_item_open_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <TextView
                android:id="@+id/tv_brand_open_shop_title"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_big_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_brand_open_shop_content"
                android:textSize="@dimen/text_size_12"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/look_detail"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12"
            android:background="@drawable/shape_login"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />


    </RelativeLayout>



</LinearLayout>