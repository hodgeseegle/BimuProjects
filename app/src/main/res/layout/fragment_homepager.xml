<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/ll_home_head_search"
        layout="@layout/item_app_title5"
        />

    <LinearLayout
        android:layout_below="@id/ll_home_head_search"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <com.can.bimuprojects.view.RefreshListView
        android:id="@+id/rlv_home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:divider="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_home_head_search"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:clickable="true"
        android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_home_select_raiders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hot_brand"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_big_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_white"
        />
    </LinearLayout>

</RelativeLayout>